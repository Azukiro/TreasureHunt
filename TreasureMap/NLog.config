<?xml version="1.0" encoding="utf-8" ?>
<!-- XSD manual extracted from package NLog.Schema: https://www.nuget.org/packages/NLog.Schema-->
<nlog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xsi:schemaLocation=""
      autoReload="true"
      internalLogFile=".\log\treasure-map.log"
      internalLogLevel="Info">
    
    <targets>

        <target name="logconsole" xsi:type="ColoredConsole">
            <layout>${longdate} : ${newline} ${level:uppercase=true} | ${logger} | ${message}
                ${exception:format=tostring}
            </layout>
            <highlight-row condition="level == LogLevel.Info" foregroundColor="Green"/>
            <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow"/>
            <highlight-row condition="level == LogLevel.Error" foregroundColor="Red"/>
        </target>

        <target name="logfile" xsi:type="File" fileName=".\log\treasure-map.log">
            <layout>${longdate} : ${newline} ${level:uppercase=true} | ${logger} | ${message}
                ${exception:format=tostring}
            </layout>
        </target>
    </targets>

    <!-- rules to map from logger name to target -->
    <rules>
        <logger name="*" minlevel="Trace" writeTo="logfile,logconsole"/>
    </rules>
</nlog>